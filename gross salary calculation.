//c code for gross salary calculations.

#include <stdio.h>
int main(){

    int bs;
    printf("enter your basic salary:");
    scanf(" %d", &bs);
    // can use either int or float.
    float da, hra, gs;

    da= (bs*40)/100;
    hra= (bs*20)/100;
    gs= bs+ da+ hra;
    printf("the da is:%f\nthe hra is:%f\n", da, hra);
    printf("the net gross salary is:%f", gs);

    return 0;
}

